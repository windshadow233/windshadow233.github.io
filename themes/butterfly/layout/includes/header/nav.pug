nav#nav
  span#blog-info
    if theme.nav.display_title
      a.site-name(href=url_for('/') title=config.title)=config.title
    
  #menus
    !=partial('includes/header/menu_item', {}, {cache: true})

  #nav-right
    if (theme.algolia_search.enable || theme.local_search.enable || theme.docsearch.enable)
      .menus_item
        #search-button
          span.site-page.social-icon.search
            i.fas.fa-search.fa-fw
      .menus_item
        #random
          a.site-page.social-icon(href="javascript:toRandomPost();",title="前往随机文章")
            i.fa.fa-paper-plane
      .menus_item
        #travel
          a.site-page.social-icon(href="https://travel.moe/go.html?travel=on",title="萌ICP备异次元之旅")
            i.iconfont.icon-planet
      .menus_item
        #traveling
          a.site-page.social-icon(href="https://www.travellings.cn/go.html",title="开往-友联接力")
            i.fa.fa-subway
      .menus_item
        #foreverblog
          a.site-page.social-icon(href="https://foreverblog.cn/go.html",title="十年之约")
            i.fa-solid.fa-infinity
    .menus_item
      #toggle-menu
        span.site-page
          i.fas.fa-bars.fa-fw


