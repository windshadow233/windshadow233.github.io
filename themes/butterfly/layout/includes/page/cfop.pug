script.
  $(document).ready(() => {
    import('https://cdn.cubing.net/v0/js/cubing/twisty');
  });
style.
    .twisty-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }
    .twisty-container twisty-player {
        width: 100%;
        border: 4px double #00000044;
        background: grey;
        border-radius: 15px 15px 0 0;
        height: 200px
    }
    twisty-alg-viewer {
        margin: 10px 5px;
        font-size: 12px;
    }
    .twisty-container .algo-simulate{
        width: calc(100% / 8 - 15px);
        border: 3px solid var(--fyz-theme);
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 10px 0;
        text-align: center;
        border-radius: 20px;
    }
    @media screen and (max-width: 1200px) {
        .twisty-container .algo-simulate{
            width: calc(100% / 6 - 15px);
        }
    }
    @media screen and (max-width: 900px) {
        .twisty-container .algo-simulate{
            width: calc(100% / 4 - 15px);
        }
    }
    @media screen and (max-width: 768px) {
        .twisty-container .algo-simulate{
            width: calc(100% / 2 - 15px);
        }
    }
    @media screen and (max-width: 384px) {
        .twisty-container .algo-simulate{
            width: calc(100% / 1 - 15px);
        }
    }
    .category-page {
        margin-bottom: 20px;
    }
    .pagination {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 15px;
        margin: 20px 0;
    }

    .pagination .page-btn {
        padding: 10px 15px;
        border: none;
        border-radius: 25px;
        background: linear-gradient(135deg, #6a5af9, #727cf5);
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .pagination .page-btn:hover {
        background: linear-gradient(135deg, #5a4af9, #606cf5);
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .pagination .page-btn.active {
        background: linear-gradient(135deg, #f74a62, #fc5a72);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        transform: translateY(-3px);
    }

script.
  $(document).ready(() => {
    const pages = document.querySelectorAll(".category-page");
    const buttons = document.querySelectorAll(".page-btn");

    function showPage(index) {
      pages.forEach((page, i) => {
        page.style.display = i === index ? "" : "none";
      });

      buttons.forEach((btn, i) => {
        btn.classList.toggle("active", i === index);
      });
    }

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const index = parseInt(btn.getAttribute("data-index"));
        showPage(index);
      });
    });
    
    showPage(0);
  });


if site.data.cfop
  - var info = site.data.cfop
  .author-content.author-content-item.top-background.single(style=info.top_background ? `background: url(${info.top_background}) left 28% / cover no-repeat;` : "")
    .card-content
      .author-content-item-tips=info.title
      span.author-content-item-title=info.subTitle
      .content-bottom
        .tips=info.tips
  - var algo_groups = site.data.cfop.algo_groups
  .pagination
    each category, index in algo_groups
      button.page-btn(
        data-index=index,
        class=(index === 0 ? 'active' : '')
      ) #{category.page_name}
  #category-pages
    each category, index in algo_groups
      .category-page(data-index=index style=(index === 0 ? '' : 'display: none;'))
        h2= category.algo_name
        .twisty-container
          - let algoCounter = 0;
          each item in category.algo_list
            - let id = category.id_prefix + '-' + algoCounter++;
            .algo-simulate
              twisty-player(
                  id=id,
                  alg=item.algo,
                  experimental-setup-anchor="end",
                  experimental-stickering=category.algo_type,
                  experimental-drag-input="auto",
                  viewer-link="none",
                  background="none",
                  visualization="3D"
              )
              twisty-alg-viewer(for=id)
